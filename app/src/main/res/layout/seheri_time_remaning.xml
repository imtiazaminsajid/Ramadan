<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images4"
    >

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/namaz_time_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="আজকের সময়সূচী"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/today_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="53dp"
            android:text="৩১ মে"
            android:textColor="#292727"
            android:textSize="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="44dp" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/today_date"
            android:layout_marginEnd="41dp"
            android:text="শুক্রবার"
            android:textColor="#292727"
            android:textSize="22dp"
            android:layout_marginRight="41dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/ramzan_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginTop="92dp"
            android:background="#09da95"
            android:gravity="center"
            android:text="রমজান ১০"
            android:textColor="#fffdfd"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/last_time_seheri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/today_date"
            android:layout_marginBottom="48dp"
            android:text="৩ঃ৫০মিনিট"
            android:textColor="#292727"
            android:textSize="22dp"
            android:layout_alignLeft="@+id/today_date" />

        <TextView
            android:id="@+id/seheri_last_time_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="12dp"
            android:text="সেহেরীর শেষ সময়"
            android:textColor="#292727"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/last_time_iftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/day"
            android:layout_alignTop="@+id/last_time_seheri"
            android:text="৬ঃ৫০মিনিট"
            android:textColor="#292727"
            android:textSize="22dp"
            android:layout_alignRight="@+id/day" />

        <TextView
            android:id="@+id/iftar_last_time_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/seheri_last_time_TV"
            android:text="ইফতারি শেষ সময়"
            android:textColor="#292727"
            android:textSize="22dp"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp">

        <TextView
            android:id="@+id/seheri_time_remaining_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="আজকের সেহেরীর সময় বাকি"
            android:textColor="#292727"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="২ঘঃ ৩০মিঃ ৪০সেঃ"
            android:textColor="#09da95"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:background="#09da95"
            android:gravity="center"
            android:text="বিস্তারিত"
            android:textColor="#fffdfd"
            android:textSize="25dp"
            android:textStyle="bold" />

    </RelativeLayout>



</RelativeLayout>